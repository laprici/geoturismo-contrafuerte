---
import Layout from "../layouts/Layout.astro";
import Header from "../components/Header/Header.astro";
import Section1 from "../components/Section1.astro";
import '@fontsource/nunito-sans';
import '@fontsource/nunito-sans/900.css';
import '@fontsource/nunito-sans/300.css';
import Section2 from "../components/Section2.astro";
import Section3 from "../components/Section3/Section3.astro";
import SlidesMobile from "../components/Section4/SlidesMobile.astro";
import Slides from "../components/Section4/Slide";
import Section5 from "../components/Section5/Section5.astro";
import Section6 from "../components/Section6/Section6.astro";
import Frame from "../components/Frame.astro";
import Footer from '../components/Footer.astro'

---

<Layout title="Geoturismo Contrafuerte" description="Este patrimonio geológico natural de extraordinaria belleza y atractivo, es considerado una de las rutas imperdibles en el país, ha sido protagonista de 3 importantes erupciones en los últimos 100 años, 1921, 1960, 2011, siendo además uno de los principales sitios de exploración geotérmica de Chile.">
	<Header />
	<Section1 />
	<Section2 />
	<Section3 />
	<Slides client:load/>
	<SlidesMobile />
	<!-- <Section5 /> -->
	<!-- <Section6 /> -->
	<!-- <Frame /> -->
	<!-- <Footer /> -->
</Layout>

<style is:global>
	body {
		background-color: #F4F4F4;
	}
	@font-face {
		font-family: "Radwave";
		src: url("/font/RadwaveFont.otf") format("opentype");
	}

	.px-geo {
		padding-left: 3.8rem;
		padding-right: 3.8rem;
	}

	.mx-geo {
		margin-left: 3.8rem;
		margin-right: 3.8rem;
	}

	@media (max-width: 600px) {
		.px-geo {
			padding-left: 2rem;
			padding-right: 2rem;
		}

		.mx-geo {
			margin-left: 2rem;
			margin-right: 2rem;
		}
	}

	.font-radwave {
		font-family: "Radwave";
	}

	.font-nunito {
		font-family: "Nunito Sans";
	}

	.stroke-1px-white {
		-webkit-text-stroke: 1px white;
	}
	.stroke-1px-grey {
		-webkit-text-stroke: 1.5px #4F4F4F;
	}

	.swiper-button-prev::after,
	.swiper-button-next::after {
		content: "";
	}

	.swiper-button-prev
	.swiper-button-next {
		width: 100px;
		height: 100px;
		background-size: 'contain';
		background-position: 'center';
	}

	.swiper-button-prev {
		background: url("/left.svg") no-repeat;
		

	}

	.swiper-button-next {
		background: url("/right.svg") no-repeat;
	}

	@media screen and (max-height: 800px) {
        .map-img-h {
            display:none;
        }

		.swiper-slide .title-header {
			top: 20vh;
		}
    }
</style>
